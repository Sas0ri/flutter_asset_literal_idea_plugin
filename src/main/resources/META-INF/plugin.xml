<idea-plugin>
    <id>com.ixigua.flutter_asset_iteral</id>
    <name>FlutterAssetAutoCompletion</name>
    <vendor url="https://www.ixigua.com/">ixigua.com</vendor>

    <description><![CDATA[
    Suggest asset paths when you type a Dart string.<br>
    <img src="https://i.imgur.com/kxmRfqT.gif" alt="demo"  width=480/>
    ]]></description>

<!--    copy from Flutter plugin -->
    <idea-version since-build="191.8026" until-build="193.*"/>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="Dart"
                                implementationClass="com.ixigua.completion.AssetLiteralCompletionContributor" order="first"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>